@page
@model GamesModel
@{
    ViewData["Title"] = "Games";
}
<h3>Create Game</h3>

<form method="POST">
    <label for="players">How many teams would you like there to be?</label>
    <br>
    <div class="btn-group">
        <input type="number" name="teams" min="1" max="10" value="2" class="form-control">
    </div>
    <div class="btn-group">
        <input type="submit" value="Create" class="btn btn-primary">
    </div>
</form>

<br />

<h3>Active Games</h3>
<ul>
    @foreach (var activeGame in Model.ActiveGames)
    {
        <li>
            <a href="/games/@activeGame.GameId">@activeGame.GameId</a>
        </li>
    }
</ul>
